{
  "manifest_version": 3,
  "name": "Spoonflower Likes",
  "description": "Like everything on Spoonflower",
  "version": "1.0",
  "minimum_chrome_version": "105",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": "images/icon16.png",
    "default_title": "Like everything on this page"
  },
  "host_permissions": [
    "https://*.spoonflower.com/*"
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  }
}